{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "double"],
        "no-console": "off",
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "class-methods-use-this": [0, { "exceptMethods": ["showUser", "auth", "store"] }],
        "func-names": ["error", "never"]
    }
}